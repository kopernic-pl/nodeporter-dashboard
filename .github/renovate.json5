{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: ['config:js-app', ':semanticCommits', ':semanticCommitTypeAll(chore)'],
  enabledManagers: ['dockerfile', 'github-actions', 'npm'],
  commitMessageAction: 'ðŸ”— update',
  internalChecksFilter: 'strict',
  dependencyDashboard: true,
  dependencyDashboardApproval: true,
  pin: {
    dependencyDashboardApproval: false,
    automerge: false,
  },
  separateMinorPatch: true,
  separateMajorMinor: true,
  
  // GitHub Actions configuration
  'github-actions': {
    fileMatch: ['^\.github/workflows/[^/]+\.ya?ml$'],
    pinDigests: true,
  },
  
  packageRules: [
    // Node.js version updates
    {
      matchManagers: ['github-actions'],
      matchPackageNames: ['actions/setup-node'],
      groupName: 'Node.js setup',
      allowedVersions: '>=24.10.0',
    },
    
    // Helm setup updates
    {
      matchManagers: ['github-actions'],
      matchPackageNames: ['azure/setup-helm'],
      groupName: 'Helm setup',
      allowedVersions: '>=3.18.6',
    },
    
    // GitHub Actions updates
    {
      matchManagers: ['github-actions'],
      matchUpdateTypes: ['patch', 'minor'],
      groupName: 'GitHub Actions',
      addLabels: ['dependencies', 'github-actions'],
      automerge: true,
      automergeType: 'branch',
    },
    
    // Unit test packages
    {
      description: 'Automerge unit test packages',
      extends: ['packages:jsUnitTest'],
      automerge: false,
      matchPackageNames: ['@faker-js/faker'],
      dependencyDashboardApproval: false,
    },
    
    // Linters
    {
      description: 'Automerge linters',
      extends: ['packages:linters'],
      automerge: false,
      matchPackageNames: ['cspell', 'markdownlint-cli', 'prettier-package-json'],
      dependencyDashboardApproval: false,
    },
    
    // Default npm package rules
    {
      matchDatasources: ['npm'],
      minimumReleaseAge: '3 days',
    },
  ],
}
